#pragma config(Hubs,  S1, HTServo,  HTMotor,  HTMotor,  none)
#pragma config(Sensor, S1,     ,               sensorI2CMuxController)
#pragma config(Motor,  motorA,           ,             tmotorNXT, openLoop)
#pragma config(Motor,  motorB,           ,             tmotorNXT, openLoop)
#pragma config(Motor,  motorC,           ,             tmotorNXT, openLoop)
#pragma config(Motor,  mtr_S1_C2_1,     Fleft,         tmotorTetrix, openLoop, encoder)
#pragma config(Motor,  mtr_S1_C2_2,     Bleft,         tmotorTetrix, openLoop)
#pragma config(Motor,  mtr_S1_C3_1,     Fright,        tmotorTetrix, openLoop, encoder)
#pragma config(Motor,  mtr_S1_C3_2,     Bright,        tmotorTetrix, openLoop)
#pragma config(Servo,  srvo_S1_C1_1,    lServo,               tServoStandard)
#pragma config(Servo,  srvo_S1_C1_2,    rServo,               tServoStandard)
#pragma config(Servo,  srvo_S1_C1_3,    nservo,               tServoStandard)
#pragma config(Servo,  srvo_S1_C1_4,    servo4,               tServoNone)
#pragma config(Servo,  srvo_S1_C1_5,    servo5,               tServoNone)
#pragma config(Servo,  srvo_S1_C1_6,    servo6,               tServoNone)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

#include "JoystickDriver.c"

void initializeRobot()
{
	servo[lServo]= 180;
	servo[rServo]= 0;
	//servo[nServo]=

	return;
}

task main()
{

	initializeRobot();

	waitForStart();

	motor[Fleft]= 100;
	motor[Bleft]= 100;
	motor[Fright]= -100;
	motor[Bright]= -100;
	wait1Msec(1650);

	//Drive Foward and ram down kickstand

	motor[Fleft]= -50;
	motor[Bleft]= -50;
	motor[Fright]= 50;
	motor[Bright]= 50;
	wait1Msec(1000);

	//Back Up Boyeee

	motor[Fleft]= 50;
	motor[Bleft]= 50;
	wait1Msec(750);

	//Prepare to block (Turn)

	motor[Fleft]= 50;
	motor[Bleft]= 50;
	motor[Fright]= -50;
	motor[Bright]= -50;
	wait1Msec(1750);

	//CHARGE

	motor[Fright]= 50;
	motor[Bright]= 50;
	wait1Msec(350);

	//Park :D

	motor[Fleft]= -51;
	motor[Bleft]= -51;
	motor[Fright]= 49;
	motor[Bright]= 49;
	wait1Msec(1500);
}

//It's just...That simple

